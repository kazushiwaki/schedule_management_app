<div class="overflow-visible rounded-lg border border-blue-300 shadow-lg max-w-2xl mx-auto bg-white">

  <h1 class="text-center text-blue-700 text-2xl font-bold mt-6 mb-4">
    <%= @schedule.title %>
  </h1>

  <div class="px-6 pb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

      <div class="p-4 bg-blue-50 border-l-4 border-blue-500 rounded-lg shadow-sm">
        <h2 class="text-gray-700 font-semibold mb-2">開始日</h2>
        <p class="text-gray-600"><%= @schedule.start_date.to_s(:datetime_jp) %></p>
      </div>

      <div class="p-4 bg-blue-50 border-l-4 border-blue-500 rounded-lg shadow-sm">
        <h2 class="text-gray-700 font-semibold mb-2">終了日</h2>
        <p class="text-gray-600"><%= @schedule.end_date.to_s(:datetime_jp) %></p>
      </div>
    </div>

    <div class="p-3 bg-gray-50 border-l-4 border-gray-300 rounded-lg shadow-sm mt-4">
      <h2 class="text-gray-700 font-semibold mb-1 text-sm">終日</h2>
      <p class="text-gray-600 text-sm"><%= @schedule.all_day ? "◯" : "" %></p>
    </div>

    <div class="p-4 bg-gray-50 border-l-4 border-gray-300 rounded-lg shadow-sm mt-4">
      <h2 class="text-gray-700 font-semibold mb-2">メモ</h2>
      <p class="text-gray-600"><%= @schedule.notes.present? ? @schedule.notes : "特になし" %></p>
    </div>

    <div class="mt-6 flex justify-between items-center space-x-3">
      <%= link_to '編集する', edit_schedule_path(@schedule), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition duration-300" %>
      <%= link_to 'スケジュール一覧に戻る', schedules_path, data: {"turbolinks" => false}, class: "px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 font-semibold rounded-lg shadow-md transition duration-300" %>
    </div>
  </div>
</div>
